---
import Layout from "../layouts/Layout.astro";
import { isFeatureEnabled } from "../features";
import { SetsList } from "../components/sets";

// Sprawdź czy funkcjonalność kolekcji jest włączona
const collectionsEnabled = isFeatureEnabled("collections");
---

<Layout title="Moje zestawy - 10x Cards">
  <div class="container mx-auto px-4 py-8">
    <div class="max-w-6xl mx-auto">
      {
        collectionsEnabled ? (
          <SetsList client:load />
        ) : (
          <div class="text-center py-12">
            <h1 class="text-3xl font-bold text-foreground mb-4">Moje zestawy</h1>
            <div class="p-6 bg-muted rounded-lg max-w-md mx-auto">
              <h2 class="text-xl font-semibold text-foreground mb-2">Funkcjonalność niedostępna</h2>
              <p class="text-muted-foreground">Funkcjonalność kolekcji jest obecnie wyłączona w tym środowisku.</p>
            </div>
          </div>
        )
      }
    </div>
  </div>
</Layout>
