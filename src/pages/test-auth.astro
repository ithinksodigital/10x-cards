---
import Layout from "../layouts/Layout.astro";
import { AuthProvider } from "../components/auth/AuthProvider";
import { AuthGuard } from "../components/auth/AuthGuard";

// Mock user data - NOT authenticated
const user = null;
const session = null;
const isAuthenticated = false;
---

<Layout title="Test Auth - 10x Cards" user={user} session={session} isAuthenticated={isAuthenticated}>
  <div class="container mx-auto px-4 py-8">
    <AuthProvider client:load initialUser={user} initialSession={session}>
      <AuthGuard client:load requireAuth={true}>
        <div class="text-center">
          <h1 class="text-2xl font-bold mb-4">Ta strona wymaga autentykacji</h1>
          <p class="text-muted-foreground">Jeśli widzisz ten tekst, to znaczy, że jesteś zalogowany!</p>
        </div>
      </AuthGuard>
    </AuthProvider>
  </div>
</Layout>
