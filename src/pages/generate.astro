---
import Layout from "../layouts/Layout.astro";
import { GenerationApp } from "../components/generation/GenerationApp";
import { isFeatureEnabled } from "../features";

// Sprawdź czy funkcjonalność kolekcji jest włączona
const collectionsEnabled = isFeatureEnabled("collections");
---

<Layout title="Generate Flashcards - 10x Cards">
  {collectionsEnabled ? (
    <GenerationApp client:load />
  ) : (
    <div class="min-h-screen flex items-center justify-center bg-background py-12 px-4 sm:px-6 lg:px-8">
      <div class="w-full max-w-md text-center">
        <h1 class="text-3xl font-bold text-foreground mb-4">10x Cards</h1>
        <div class="p-6 bg-muted rounded-lg">
          <h2 class="text-xl font-semibold text-foreground mb-2">Funkcjonalność niedostępna</h2>
          <p class="text-muted-foreground">
            Funkcjonalność generowania fiszek jest obecnie wyłączona w tym środowisku.
          </p>
        </div>
      </div>
    </div>
  )}
</Layout>
