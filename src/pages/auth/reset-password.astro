---
import Layout from "../../layouts/Layout.astro";
import { AuthProvider } from "../../components/auth/AuthProvider";
import { ResetPasswordForm } from "../../components/auth/ResetPasswordForm";

// Get token from URL parameters
const url = new URL(Astro.request.url);
const token = url.searchParams.get("token");
const type = url.searchParams.get("type");

// Mock user data - will be replaced with actual Supabase integration
const user = null;
const session = null;
---

<Layout title="Ustaw nowe hasło - 10x Cards">
  <div class="min-h-screen flex items-center justify-center bg-background py-12 px-4 sm:px-6 lg:px-8">
    <div class="w-full max-w-md">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-foreground">10x Cards</h1>
        <p class="mt-2 text-muted-foreground">Ustaw nowe hasło dla swojego konta</p>
      </div>

      <AuthProvider client:load initialUser={user} initialSession={session}>
        <ResetPasswordForm client:load token={token} type={type} />
      </AuthProvider>
    </div>
  </div>
</Layout>

<script>
  // Handle password reset
  document.addEventListener("DOMContentLoaded", () => {
    // This will be handled by the React components
  });
</script>
