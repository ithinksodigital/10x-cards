---
import Layout from "../../layouts/Layout.astro";
import { AuthProvider } from "../../components/auth/AuthProvider";
import { AuthContainer } from "../../components/auth/AuthContainer";
import { isFeatureEnabled } from "../../features";

// Mock user data - will be replaced with actual Supabase integration
const user = null;
const session = null;

// Sprawdź czy funkcjonalność autoryzacji jest włączona
const authEnabled = isFeatureEnabled("auth");
---

<Layout title="Logowanie - 10x Cards">
  <div class="min-h-screen flex items-center justify-center bg-background py-12 px-4 sm:px-6 lg:px-8">
    <div class="w-full max-w-md">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-foreground">10x Cards</h1>
        <p class="mt-2 text-muted-foreground">Zaloguj się, aby uzyskać dostęp do swoich fiszek</p>
      </div>

      {
        authEnabled ? (
          <AuthProvider client:load initialUser={user} initialSession={session}>
            <AuthContainer client:load initialMode="login" />
          </AuthProvider>
        ) : (
          <div class="text-center p-6 bg-muted rounded-lg">
            <h2 class="text-xl font-semibold text-foreground mb-2">Funkcjonalność niedostępna</h2>
            <p class="text-muted-foreground">Autoryzacja jest obecnie wyłączona w tym środowisku.</p>
          </div>
        )
      }
    </div>
  </div>
</Layout>
