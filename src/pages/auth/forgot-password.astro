---
import Layout from '../../layouts/Layout.astro';
import { AuthProvider } from '../../components/auth/AuthProvider';
import { AuthContainer } from '../../components/auth/AuthContainer';

// Mock user data - will be replaced with actual Supabase integration
const user = null;
const session = null;
---

<Layout title="Resetowanie hasła - 10x Cards">
  <div class="min-h-screen flex items-center justify-center bg-background py-12 px-4 sm:px-6 lg:px-8">
    <div class="w-full max-w-md">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-foreground">10x Cards</h1>
        <p class="mt-2 text-muted-foreground">
          Zresetuj hasło do swojego konta
        </p>
      </div>
      
      <AuthProvider client:load initialUser={user} initialSession={session}>
        <AuthContainer client:load initialMode="forgot-password" />
      </AuthProvider>
    </div>
  </div>
</Layout>

